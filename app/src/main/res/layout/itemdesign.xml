<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    android:background="@drawable/backbutton"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@drawable/backbutton"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="This is Demo Name"
            android:layout_below="@id/bookimg"
            android:fontFamily="@font/rubik"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/writertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nametext"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="This is Writter Name"

            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/writertext"
            android:orientation="horizontal"
            android:id="@+id/linear1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Available Stock :"
                android:fontFamily="@font/rubik_medium"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/stocktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="This is Stock"
                android:fontFamily="@font/rubik"

                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/linear1"
            android:orientation="horizontal"
            android:id="@+id/linear2"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Price : BDT"
                android:fontFamily="@font/rubik_medium"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/rubik"
                android:text="This is Price"
                android:gravity="center"
                android:textSize="15dp" />

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>